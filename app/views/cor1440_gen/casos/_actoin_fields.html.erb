<%= f.association :presponsable,
  collection: Sip::Presponsable.from('sip_caso_presponsable, sip_presponsable').where(
    'sip_caso_presponsable.id_presponsable=sip_presponsable.id 
      AND sip_caso_presponsable.id_caso=?', @caso.id),
  wrapper_html: { style: "padding-bottom: 18px;" },
  label_method: :nombre,
  value_method: :id 
%>

<%= f.association :categoria,
  collection: Sip::Categoria.habilitados.where(
    "id_tviolencia<>'R'").reorder(:id_tviolencia, :id),
  label: "Categoria",
  label_method: lambda {|t| t.id_tviolencia + t.id.to_s + ' ' + t.nombre },
  value_method: :id 
%>

