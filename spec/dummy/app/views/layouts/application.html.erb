<% content_for :title do %>
    <%= Cor1440Gen.titulo %>
<% end %>

<% content_for :menu do %>
  <%= menu_group do %>
    <% if !current_usuario.nil? %>
      <%= menu_item "Actividades", cor1440_gen.actividades_path %>
    <% end %>
  <% end %>
  <%= menu_group :pull => :right do %>
    <%= menu_item "Documentacion", '/acercade' %>
    <% if !current_usuario.nil? %>
      <%= drop_down "Administrar" do %>
        <%= menu_item "Clave", cor1440_gen.editar_registro_usuario_path %>
        <% if current_usuario.rol == Ability::ROLADMIN %>
          <%= menu_item "Usuarios", cor1440_gen.usuarios_path %>
        <% end %>
        <% if current_usuario.rol == Ability::ROLADMIN %>
          <%= menu_item "Tablas Básicas", sip.tablasbasicas_path %>
        <% end %>
      <% end %>
      <%= menu_item "Salir #{current_usuario.nusuario}", cor1440_gen.sign_out_path %>
    <% else %>
      <%= menu_item "Acerca de", '/acercade' %>
      <%= menu_item "Iniciar Sesión", cor1440_gen.new_usuario_session_path %> 
    <% end %>
  <% end %>
<% end %>

<% content_for :footer do %>
  <p><span class='derechos'>Dominio Público de acuerdo a Legislación Colombiana<br/>
    Desarrollado por <a href="http://www.pasosdeJesus.org" target="_blank">Pasos de Jesús</a>. 2015. 
  </span></p>
<% end %>

<%= render template: "layouts/cor1440_gen/application" %>
